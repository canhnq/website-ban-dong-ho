@using website_ban_dong_ho.Models
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "DanhSachSanPham";
    Layout = "~/Views/HomeLayout.cshtml";
}
@{
    IEnumerable<SanPham> lstSP = ViewBag.lstSP as IEnumerable<SanPham>;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>
                @lstSP.GroupBy(n => n.LoaiSanPham).ElementAt(0).Key.TenLoai hãng @lstSP.GroupBy(n => n.NhaSanXuat).ElementAt(0).Key.TenNSX
            </h3>
        </div>
        
    </div>
</div>
<br/>
<div class="container">
    <div class="row">
        @foreach (var item in lstSP)
        {
            <div class="col-sm-3">
                <div class="card">
                    <div class="card-block">
                        <a href="@Url.Action("XemChiTiet","SanPham",new { id = item.MaSP })"><img src="@Url.Content("~/Content/HinhAnhSP/"+item.HinhAnh)" style="width: 100%;height:216px" alt=""></a>
                        <div class="card-title text-xs-center mt-1" style="height: 50px;">@item.TenSP</div>
                        <div class="card-title text-xs-center">@item.DonGia.Value.ToString("#,##") VND</div>
                        <a class="btn btn-primary themsp" href="@Url.Action("ThemGioHang","GioHang",new { @MaSP = item.MaSP, @strURL = Request.Url.ToString() })" role="button">Thêm vào giỏ</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>